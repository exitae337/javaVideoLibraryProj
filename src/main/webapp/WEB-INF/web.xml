<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>main-servlet</servlet-name>
    <servlet-class>controllers.userservlets.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>main-servlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>get-users-servlet</servlet-name>
    <servlet-class>controllers.userservlets.UserGetAllServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>get-users-servlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>get-user-by-id</servlet-name>
    <servlet-class>controllers.userservlets.UserGetByID</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>get-user-by-id</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>

</web-app>
